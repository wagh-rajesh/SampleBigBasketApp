<div class="text-center" style="padding:50px 0">
<h2 align="center"> Sign up</h2><br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-5 control-label" %>
    <div class="col-sm-3">
      <%= f.email_field :email, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "col-sm-5 control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-sm-3">
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => "col-sm-5 control-label" %>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    </div>  
  </div>

  <div class="actions">
    <div class="col-sm-12">
      <%= f.submit "Sign up", class: "btn btn-default login-button" %>
      <%- if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-default login-button"  %>
      <% end -%>
     </div> 
  </div>

<% end %>

</div>
