<div class="text-center" style="padding:50px 0">

<h2 align="center">Big-Basket Login</h2><br />


<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :email, :class => "col-sm-5 control-label"  %>
    <div class="col-sm-3">
    <%= f.email_field :email, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "col-sm-5 control-label"  %>
    <div class="col-sm-3">
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group login-group-checkbox">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, :class => "checkbox-inline" %> <%= f.label :remember_me %>
      <% end -%>
  </div>

  <div class="actions">
    <div class="col-sm-12">
      <%= f.submit "Log in", class: "btn btn-default login-button" %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default login-button" %><br />
      <% end -%>
    </div>
  </div><br />

  <div class="form-group">
    <div class="col-sm-12"><br />
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
       <%= link_to "Forgot your password?", new_password_path(resource_name)%><br />
    <% end -%>
    </div>
  </div>

<% end %>

</div>
